    "deploy:mumbai": "truffle migrate --network mumbai",
    "deploy:fuji": "truffle migrate --network fuji",
    "deploy:dev": "truffle migrate --network development",
    "reset": "truffle migrate --network development --reset",
    "verify:mainnet": "truffle run verify ACR --network ethereum",
    "verify:ropsten": "truffle run verify ACR --network ropsten",
    "verify:rinkeby": "truffle run verify ACR --network rinkeby",
    "verify:goerli": "truffle run verify ACR --network goerli",
    "verify:polygon": "truffle run verify ACR --network polygon",
